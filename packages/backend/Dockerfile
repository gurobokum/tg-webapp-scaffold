# syntax=docker/dockerfile:1

FROM docker.io/python:3.12.4-slim-bullseye

LABEL name="TG WebApp" \
      maintainer="Guro Bokum <jiojiajiu@gmail.com>" \
      org.opencontainers.image.source="https://github.com/gurobokum/tg-webapp-scaffold" \
      org.opencontainers.image.description="TG WebAPP Scaffold" \
      org.opencontainers.image.licenses="MIT"

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    POETRY_VIRTUALENVS_CREATE=false \
    POETRY_VERSION=2.1.1 \
    APP_USER=tg_webapp \
    APP_HOME=/app

RUN useradd --create-home $APP_USER

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        build-essential \
    && rm -rf /var/lib/apt/lists/*

ENV PATH="/home/${APP_USER}/.local/bin:${PATH}"
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir poetry==${POETRY_VERSION}

WORKDIR $APP_HOME

COPY --chown=$APP_USER:$APP_USER poetry.lock pyproject.toml ./
RUN poetry install --no-root --no-cache && \
    poetry cache clear pypi --all && rm -r ~/.cache/pypoetry

USER $APP_USER
COPY --chown=$APP_USER:$APP_USER . .
